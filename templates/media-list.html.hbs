<div class="row">
    <h1>Recently uploaded media</h1>
</div>

<div class="row my-2">
    {{#each media_list}}
    <a href="/m/{{ this.hash_id }}"
        class="col col-6 col-md-4 col-lg-2 d-flex align-items-center justify-content-center border border-1 rounded">
        <img src="{{ super::common.permalink_thumbnail(&this) }}" alt="{{ this.hash_id }}" class="img-fluid rounded">
    </a>
    {{/each}}
</div>
